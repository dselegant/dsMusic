/* pages/dailyRecommend/dailyRecommend.wxss */
/* 容器 */
.recommendContainer{
  height: 100%;
}

/* 头部 */
.header{
  position: relative;
  width: 100%;
  height: 300rpx;
}

/* 头部图片 */
.header image{
  width: 100%;
  height: 100%;
}

/* 头部文字日期 */
.header .date{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 260rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  transform: translateX(-44%) translateY(-40%);
}

.header text{
  font-size: 38rpx;
}

/* 列表区域 */
.ListContainer{
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
  transform: translateY(-20rpx);
}

/* 列表区头部 */
.listHeader{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}

.musicScroll{
  height: calc(100vh - 380rpx);
}

.musicItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musicItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}